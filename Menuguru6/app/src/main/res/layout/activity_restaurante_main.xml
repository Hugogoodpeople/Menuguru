<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <pt.menuguru.playstore.Utils.BounceListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/morada_rest"
        tools:listitem="@layout/grid_menu"
        android:divider="@null"
        android:dividerHeight="0dp"
        tools:listheader="@layout/header_restaurante_main"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/bt_reservar_mesa" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/Reservas"
        android:id="@+id/bt_reservar_mesa"
        android:background="@color/dourado"
        android:textColor="@color/white"
        android:alpha="0.90"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>