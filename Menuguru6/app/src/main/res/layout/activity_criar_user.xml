<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="pt.menuguru.menuguru6.CriarUser"
    android:background="@color/silver">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:id="@+id/edit_pnome"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/textfields"
        android:layout_weight="1.5"
        android:hint="Primeiro nome"
        android:textSize="14dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:id="@+id/edit_snome"
        android:layout_below="@+id/edit_pnome"
        android:layout_alignRight="@+id/edit_pnome"
        android:layout_alignEnd="@+id/edit_pnome"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/textfields"
        android:layout_weight="1.5"
        android:hint="Sobrenome"
        android:textSize="14dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_sexo"
        android:layout_below="@+id/edit_snome"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/edit_snome"
        android:layout_alignEnd="@+id/edit_snome"
        android:layout_marginTop="10dp"
        android:background="@drawable/textfields"
        android:layout_weight="1.5"
        android:hint="Sexo"
        android:textSize="14dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_cidade"
        android:layout_below="@+id/edit_sexo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/edit_sexo"
        android:layout_alignEnd="@+id/edit_sexo"
        android:layout_marginTop="10dp"
        android:background="@drawable/textfields"
        android:layout_weight="1.5"
        android:hint="Cidade"
        android:textSize="14dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/edit_data_nasc"
        android:background="@drawable/textfields"
        android:layout_weight="1.5"
        android:hint="Data Nascimento"
        android:textSize="14dp"
        android:layout_below="@+id/edit_cidade"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/edit_email"
        android:background="@drawable/textfields"
        android:layout_weight="1.5"
        android:hint="Email"
        android:textSize="14dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edit_data_nasc"
        android:layout_alignRight="@+id/edit_data_nasc"
        android:layout_alignEnd="@+id/edit_data_nasc"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/edit_pass"
        android:background="@drawable/textfields"
        android:layout_weight="1.5"
        android:hint="Password"
        android:textSize="14dp"
        android:layout_below="@+id/edit_email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/edit_email"
        android:layout_alignEnd="@+id/edit_email"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_criar_user"
        android:id="@+id/bt_c_registo"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/edit_pass"
        android:layout_alignEnd="@+id/edit_pass" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/desc_criar_registo"
        android:id="@+id/textView"
        android:layout_above="@+id/bt_c_registo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/bt_c_registo"
        android:layout_alignEnd="@+id/bt_c_registo"
        android:layout_marginBottom="10dp" />

</RelativeLayout>
