<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textview_conteudo"
            android:layout_marginTop="10dp"
            android:textSize="14dp"
            android:layout_toLeftOf="@+id/textView_oreco"
            android:layout_toStartOf="@+id/textView_oreco"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView_oreco"
            android:gravity="right"
            android:layout_alignBottom="@+id/textview_conteudo"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            android:layout_marginRight="10dp"
            android:textSize="14dp"
            android:textColor="@color/gray" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/textView_oreco"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/gray"
            android:layout_marginTop="10dp"></FrameLayout>
    </RelativeLayout>
</LinearLayout>