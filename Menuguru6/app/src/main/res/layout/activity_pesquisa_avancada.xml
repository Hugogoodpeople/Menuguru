<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:background="@color/darkGray"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_above="@+id/relativeLayout">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:id="@+id/buttonfiltros1"
                android:scaleType="fitStart"
                android:src="@drawable/ico_ordem_1"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/border_line_bot" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:id="@+id/bt_transfFav"
                android:scaleType="fitStart"
                android:src="@drawable/ico_cozinha"
                android:layout_below="@+id/buttonfiltros1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/border_line_bot" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:id="@+id/buttonfiltros3"
                android:scaleType="fitStart"
                android:src="@drawable/ico_preco"
                android:layout_below="@+id/bt_transfFav"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="0dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="200dp"
                android:background="@drawable/border_line_bot" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:id="@+id/buttonfiltros4"
                android:scaleType="fitStart"
                android:src="@drawable/ico_opcoes"
                android:layout_below="@+id/buttonfiltros3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="0dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="300dp"
                android:background="@drawable/border_line_bot" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:id="@+id/buttonfiltros5"
                android:scaleType="fitStart"
                android:src="@drawable/ico_ideal"
                android:layout_below="@+id/buttonfiltros4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="0dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="400dp"
                android:background="@drawable/border_line_bot" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:id="@+id/buttonfiltros6"
                android:scaleType="fitStart"
                android:src="@drawable/ico_ambiente"
                android:layout_below="@+id/buttonfiltros5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="0dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="500dp"
                android:background="@drawable/border_line_bot" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/ordenar"

                android:id="@+id/textView_avaliacoes"

                android:layout_above="@+id/bt_transfFav"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/cozinha"
                android:id="@+id/text_oferta"
                android:layout_alignBottom="@+id/bt_transfFav"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/preco"
                android:id="@+id/text_rating_desc"
                android:layout_alignBottom="@+id/buttonfiltros3"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/opcoes"
                android:id="@+id/text_rating_desc"
                android:layout_alignBottom="@+id/buttonfiltros4"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/idealpara"
                android:id="@+id/text_oferta"
                android:layout_alignBottom="@+id/buttonfiltros5"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/ambiente"
                android:id="@+id/text_preco"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp" />
        </RelativeLayout>
    </ScrollView>

    <pt.menuguru.menuguru6.Utils.BounceListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lista_avancada"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/scrollView"
        android:layout_toEndOf="@+id/scrollView"
        android:layout_above="@+id/relativeLayout"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:id="@+id/relativeLayout"
        android:background="@color/teal"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/lista_avancada"
        android:weightSum="100"
        android:layout_alignEnd="@+id/lista_avancada">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="50"
            android:text="@string/limpar"
            android:id="@+id/buttonLimpar"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="0dp"

            android:background="@color/white" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="50"
            android:text="@string/gravar"
            android:id="@+id/buttonGravar"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:background="@color/dourado"
            android:textColor="@color/white" />
    </LinearLayout>



</RelativeLayout>