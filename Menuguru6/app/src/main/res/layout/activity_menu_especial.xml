<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pt.menuguru.menuguru6.MenuEspecial">

    <pt.menuguru.menuguru6.Utils.BounceListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_esp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        tools:listheader="@layout/header_menuespecial" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Reservar"
        android:id="@+id/button_reservar"
        android:background="@color/dourado"
        android:textColor="@color/white"
        android:alpha="0.90"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Voucher"
        android:id="@+id/bt_voucher"
        android:alpha="0.90"
        android:background="@color/dourado"
        android:textColor="@color/white"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
