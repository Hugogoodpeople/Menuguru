<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:id="@+id/favoritos_number"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="88"
        android:gravity="center"
        android:textColor="@color/dourado"
        android:textSize="18dp"
        android:background="@drawable/bola_dourada" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/texto_fav_nome"
        android:layout_toEndOf="@+id/favoritos_number"
        android:layout_toRightOf="@+id/favoritos_number"
        android:layout_alignBottom="@+id/favoritos_number"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:textSize="16dp"
        android:layout_toLeftOf="@+id/imageView_tem_fav"
        android:layout_toStartOf="@+id/imageView_tem_fav"
        android:layout_alignParentTop="false" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView_tem_fav"
        android:layout_alignBottom="@+id/texto_fav_nome"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="15dp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_toEndOf="@+id/favoritos_number"
        android:background="@color/black"
        android:id="@+id/relativeLayout"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/favoritos_number" />
</RelativeLayout>