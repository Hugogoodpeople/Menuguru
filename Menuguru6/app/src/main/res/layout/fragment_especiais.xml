<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/capa"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:src="@drawable/bck_refugio"
        android:scaleType="centerCrop" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Restaurante Bonsai"
        android:id="@+id/nomeRestaurante"
        android:layout_below="@+id/capa"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/imagemTipo"
        android:layout_toStartOf="@+id/imagemTipo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Menu"
        android:id="@+id/nomeMenu"
        android:layout_below="@+id/nomeRestaurante"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/precoAntigo"
        android:layout_toStartOf="@+id/precoAntigo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Desconto 21%"
        android:id="@+id/desconto"
        android:layout_below="@+id/nomeMenu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_alignRight="@+id/nomeMenu"
        android:layout_alignEnd="@+id/nomeMenu" />

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/imagemTipo"
        android:src="@drawable/ic_antes_depois"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_above="@+id/precoAntigo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></LinearLayout>

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="14.52 €"
        android:id="@+id/precoAntigo"
        android:layout_below="@+id/nomeRestaurante"
        android:layout_alignRight="@+id/imagemTipo"
        android:layout_alignEnd="@+id/imagemTipo"
        android:layout_marginTop="0dp"
        android:gravity="right"
        android:layout_marginRight="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="4.52 €"
        android:id="@+id/precoActual"
        android:layout_alignTop="@+id/desconto"
        android:layout_alignRight="@+id/imagemTipo"
        android:layout_alignEnd="@+id/imagemTipo"
        android:textColor="@color/dourado"
        android:layout_toRightOf="@+id/nomeMenu"
        android:layout_toEndOf="@+id/nomeMenu"
        android:gravity="right"
        android:textSize="18dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="-4dp" />

</RelativeLayout>