<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/layout_procurar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Para quando gostaria de reservar mesa?"
        android:id="@+id/nomeRestaurante"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textAlignment="center" />

    <Button
        android:layout_width="125dp"
        android:layout_height="100dp"
        android:id="@+id/button"
        android:background="@drawable/border_button"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/nomeRestaurante"
        android:layout_alignLeft="@+id/nomeRestaurante"
        android:layout_alignStart="@+id/nomeRestaurante" />

    <Button
        android:layout_width="125dp"
        android:layout_height="100dp"
        android:id="@+id/button2"
        android:background="@drawable/border_button"
        android:layout_toEndOf="@+id/button"
        android:layout_alignTop="@+id/button"
        android:layout_alignRight="@+id/nomeRestaurante"
        android:layout_alignEnd="@+id/nomeRestaurante" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:background="@drawable/border_button"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_alignRight="@+id/nomeRestaurante"
        android:layout_alignEnd="@+id/nomeRestaurante"
        android:text="Agora"
        android:textColor="@color/white"
        android:textAlignment="center" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/button3"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3"
        android:weightSum="1">

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.29"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:id="@+id/space6" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/button5"
            android:background="@drawable/border_button"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.29"
            android:layout_below="@+id/space6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/button6"
            android:background="@drawable/button_mais"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.29"
            android:layout_toEndOf="@+id/button5"
            android:layout_alignTop="@+id/button5"
            android:layout_toRightOf="@+id/button5" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/button4"
            android:background="@drawable/ic_more_b"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.29"
            android:layout_toStartOf="@+id/button5"
            android:layout_alignTop="@+id/button5"
            android:layout_toLeftOf="@+id/button5" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sem data especifica"
            android:id="@+id/button7"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/button5"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:textColor="@color/white" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Encontrar mesa"
            android:id="@+id/button8"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/encontar_mesa"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imagemTipo"
            android:layout_alignBottom="@+id/button4"
            android:layout_toLeftOf="@+id/button4"
            android:layout_toStartOf="@+id/button4"
            android:layout_alignTop="@+id/button4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_close_b" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="pax."
            android:id="@+id/nomeMenu"
            android:layout_toEndOf="@+id/button6"
            android:layout_alignTop="@+id/button6"
            android:layout_toRightOf="@+id/button6"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp" />

    </RelativeLayout>

</RelativeLayout>