<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:id="@+id/imagem_menu_1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/sem_foto"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:id="@+id/lista_menus_restaurante"

        android:layout_marginTop="175dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/i_map" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Exemplo exemplo Exemplo exemplo Exemplo exemplo Exemplo exemplo"

        android:id="@+id/lista_menus_restaurante"
        android:layout_below="@+id/imagem_menu_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/lista_menus_restaurante"
        android:layout_toStartOf="@+id/lista_menus_restaurante"



        android:layout_marginLeft="15dp" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="dist"
        android:id="@+id/distancia_restaurante_header"
        android:gravity="center"
        android:layout_below="@+id/imagem_menu_1"
        android:layout_alignRight="@+id/text_oferta"
        android:layout_alignEnd="@+id/text_oferta"
        android:layout_marginTop="-25dp"
        android:layout_marginRight="-5dp" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="85dp"

        android:layout_below="@+id/lista_menus_restaurante"



        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageButton"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/b" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageButton2"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageButton3"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_share_b" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageButton4"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_info_b" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/listas"
                android:id="@+id/text_preco_ant"
                android:layout_column="0"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/avaliar"
                android:id="@+id/text_dias"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/partilhar"
                android:id="@+id/text_oferta"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/info"
                android:id="@+id/text_preco"
                android:gravity="center" />
        </TableRow>
    </TableLayout>

    <View
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_below="@+id/tableLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/tableLayout2" />

    <View
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_alignTop="@+id/tableLayout2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="25dp"
        android:id="@+id/text_oferta" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="2 Avaliações"
        android:id="@+id/text_preco"
        android:layout_below="@+id/tableLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:textColor="@color/gray" />

    <View
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:id="@+id/tableLayout21"
        android:layout_alignLeft="@+id/tableLayout2"
        android:layout_alignStart="@+id/tableLayout2"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/text_preco" />

    <View
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_alignLeft="@+id/text_oferta"
        android:layout_alignStart="@+id/text_oferta"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/text_preco"
        android:id="@+id/view2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Comentários"
        android:id="@+id/textView31"
        android:textSize="15dp"
        android:textColor="@color/gray"
        android:layout_alignLeft="@+id/text_preco"
        android:layout_alignStart="@+id/text_preco"
        android:layout_below="@+id/text_preco"
        android:layout_marginTop="90dp" />

    <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager_restaurante"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_below="@+id/text_preco"
        android:layout_alignBottom="@+id/tableLayout21"
        android:fontFamily="@+id/ratingBar" />


</RelativeLayout>