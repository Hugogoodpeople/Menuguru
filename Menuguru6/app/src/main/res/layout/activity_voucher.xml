<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="pt.menuguru.menuguru6.Voucher"
    android:background="@color/silver">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tv_nomerest"
        android:textSize="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tv_desc"
        android:textStyle="bold"
        android:textSize="14dp"
        android:layout_below="@+id/tv_nomerest"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/tv_nomerest"
        android:layout_alignEnd="@+id/tv_nomerest"
        android:layout_marginTop="25dp"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/solicitar"
        android:id="@+id/procura_num_pax"
        android:layout_below="@+id/tv_desc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColor="@color/gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/detalhes_reserva"
        android:id="@+id/textView4"
        android:gravity="center"
        android:textColor="@color/gray"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/procura_num_pax"
        android:layout_alignStart="@+id/procura_num_pax"
        android:layout_alignRight="@+id/procura_num_pax"
        android:layout_alignEnd="@+id/procura_num_pax"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tv_data"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/dourado"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tv_hora"
        android:gravity="center"
        android:textColor="@color/dourado"
        android:textStyle="bold"
        android:layout_below="@+id/tv_data"
        android:layout_alignLeft="@+id/tv_data"
        android:layout_alignStart="@+id/tv_data"
        android:layout_alignRight="@+id/tv_data"
        android:layout_alignEnd="@+id/tv_data" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/detalhes_reserva"
        android:id="@+id/textView8"
        android:gravity="center"
        android:textColor="@color/gray"
        android:layout_below="@+id/tv_hora"
        android:layout_alignLeft="@+id/tv_hora"
        android:layout_alignStart="@+id/tv_hora"
        android:layout_alignRight="@+id/tv_hora"
        android:layout_alignEnd="@+id/tv_hora"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tv_codigo"
        android:layout_below="@+id/textView8"
        android:textStyle="bold"
        android:layout_alignRight="@+id/textView8"
        android:layout_alignEnd="@+id/textView8"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:gravity="center" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/cadeado"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/procura_num_pax"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/ed_cod"
        android:layout_alignTop="@+id/imageView"
        android:layout_above="@+id/textView4"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_marginRight="5dp"
        android:background="@color/transparent"
        android:inputType="numberPassword" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/selo"
        android:layout_alignLeft="@+id/tv_data"
        android:layout_alignStart="@+id/tv_data"
        android:layout_alignRight="@+id/tv_data"
        android:layout_alignEnd="@+id/tv_data"
        android:layout_below="@+id/tv_hora"
        android:visibility="gone" />

</RelativeLayout>
